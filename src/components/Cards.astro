---
const { nomMaison, prix, adresse, nbChambres, nbSdb, surface } = Astro.props;
---

<div class=" mx-5 my-10">
  <div class="max-w-sm rounded-lg overflow-hidden shadow-lg bg-amber-100 p-4">
    <div class="pt-2">
      <h2 class="text-3xl font-bold text-black">{nomMaison}</h2>
      <p class="text-gray-900 mt-2 font-semibold text-xl">{prix} €</p>
      <p class="text-gray-700 mt-2">{adresse}</p>
      <div class="flex justify-between mt-5 gap-4">
        <p class="text-gray-800">{nbChambres} chambres</p>
        <p class="text-gray-800">{nbSdb} salles de bain</p>
        <p class="text-gray-800">{surface} m²</p>
      </div>
      <div class="mt-4">
        <button
          class="bg-sky-200 text-black font-semibold py-2 px-4 rounded-lg border-2 border-blue-800"
        >
          En savoir plus
        </button>
      </div>
    </div>
  </div>
</div>
